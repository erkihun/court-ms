APP_NAME=PSHRDBATC
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://www.pscourt.gov.et

APP_LOCALE=am
APP_FALLBACK_LOCALE=am

# Leave empty in production; use per-user reset links.
DEFAULT_USER_PASSWORD=

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning
LOG_DAILY_DAYS=14

# -------------------------
# DATABASE
# -------------------------
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
DB_STRICT=true

# -------------------------
# SESSION
# -------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.pscourt.gov.et
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# -------------------------
# BROADCAST / QUEUE / CACHE
# -------------------------
BROADCAST_CONNECTION=reverb
QUEUE_CONNECTION=database
CACHE_STORE=database
CACHE_PREFIX=pshrdbatc

FILESYSTEM_DISK=local

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# -------------------------
# MAIL
# -------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"

# -------------------------
# AWS
# -------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# -------------------------
# VITE
# -------------------------
VITE_APP_NAME="${APP_NAME}"

# -------------------------
# REALTIME (DISABLED)
# -------------------------
BROADCAST_CONNECTION=log

# -------------------------
# SANCTUM
# -------------------------
SANCTUM_EXPIRATION=43200
